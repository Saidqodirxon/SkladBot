<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .navbar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .product-row {
        background-color: #f8f9fa;
      }
      .debt-badge {
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
      }
      .table-responsive {
        max-height: 600px;
        overflow-y: auto;
      }
      .shipment-group,
      .order-group {
        border-left: 4px solid #667eea;
        margin-bottom: 1rem;
        padding: 0.5rem;
        background-color: #fff;
      }
      .order-group {
        border-left-color: #28a745;
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admin/users">
          <i class="bi bi-arrow-left"></i> Admin Panel
        </a>
        <span class="navbar-text text-white">
          <i class="bi bi-person-circle"></i> <%= user.getFullName() %>
        </span>
      </div>
    </nav>

    <div class="container">
      <!-- User Info Card -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-8">
              <h3 class="mb-3">
                <i class="bi bi-person-badge"></i> <%= user.getFullName() %>
              </h3>
              <p class="mb-2"><strong>Телефон:</strong> <%= user.phone %></p>
              <p class="mb-2">
                <strong>Telegram ID:</strong> <%= user.telegram_id %>
              </p>
              <p class="mb-2">
                <strong>Контрагент:</strong> <%= counterparty.name %>
              </p>
            </div>
            <div class="col-md-4 text-end">
              <% if (counterparty.balance < 0) { %>
              <span class="badge bg-danger debt-badge">
                <i class="bi bi-exclamation-triangle"></i>
                Долг: <%= formatCurrency(Math.abs(counterparty.balance)) %>
              </span>
              <% } else if (counterparty.balance > 0) { %>
              <span class="badge bg-success debt-badge">
                <i class="bi bi-check-circle"></i>
                Переплата: <%= formatCurrency(counterparty.balance) %>
              </span>
              <% } else { %>
              <span class="badge bg-secondary debt-badge">
                <i class="bi bi-check-circle"></i>
                Баланс: 0
              </span>
              <% } %>
              <div class="mt-3">
                <a
                  href="/admin/users/<%= user._id %>/orders/export"
                  class="btn btn-success"
                >
                  <i class="bi bi-file-earmark-excel"></i> Экспорт в Excel
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Statistics Cards -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-box-seam"></i> Отгрузки
              </h5>
              <h3 class="text-primary"><%= shipments.length %> шт.</h3>
              <p class="text-muted">
                Всего на сумму: <%= formatCurrency(shipments.reduce((sum, s) =>
                sum + s.sum, 0)) %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-cart-check"></i> Заказы
              </h5>
              <h3 class="text-success"><%= orders.length %> шт.</h3>
              <p class="text-muted">
                Всего на сумму: <%= formatCurrency(orders.reduce((sum, o) => sum
                + o.sum, 0)) %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Shipments Section -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="bi bi-box-seam"></i> Отгрузки (Что получил клиент)
          </h5>
        </div>
        <div class="card-body">
          <% if (shipments && shipments.length > 0) { %> <%
          shipments.forEach(function(shipment) { %>
          <div class="shipment-group">
            <div class="row mb-2">
              <div class="col-md-3">
                <strong
                  ><%= new Date(shipment.date).toLocaleDateString('ru-RU')
                  %></strong
                >
              </div>
              <div class="col-md-3">
                <span class="badge bg-info"
                  >№ <%= shipment.number || shipment.name %></span
                >
              </div>
              <div class="col-md-3">
                <strong><%= formatCurrency(shipment.sum) %></strong>
              </div>
              <div class="col-md-3 text-end">
                <span class="badge bg-secondary"><%= shipment.state %></span>
              </div>
            </div>
            <% if (shipment.products && shipment.products.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-sm table-bordered mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Товар</th>
                    <th>Код</th>
                    <th style="width: 100px">Кол-во</th>
                    <th style="width: 120px">Цена</th>
                    <th style="width: 120px">Сумма</th>
                  </tr>
                </thead>
                <tbody>
                  <% shipment.products.forEach(function(product) { %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.code || product.article || '-' %></td>
                    <td><%= product.quantity %></td>
                    <td><%= formatCurrency(product.price) %></td>
                    <td><strong><%= formatCurrency(product.sum) %></strong></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% } %>
          </div>
          <% }); %> <% } else { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Отгрузки не найдены
          </div>
          <% } %>
        </div>
      </div>

      <!-- Orders Section -->
      <div class="card mb-4">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="bi bi-cart-check"></i> Заказы покупателя
          </h5>
        </div>
        <div class="card-body">
          <% if (orders && orders.length > 0) { %> <%
          orders.forEach(function(order) { %>
          <div class="order-group">
            <div class="row mb-2">
              <div class="col-md-3">
                <strong
                  ><%= new Date(order.date).toLocaleDateString('ru-RU')
                  %></strong
                >
              </div>
              <div class="col-md-3">
                <span class="badge bg-success"
                  >№ <%= order.number || order.name %></span
                >
              </div>
              <div class="col-md-3">
                <strong><%= formatCurrency(order.sum) %></strong>
              </div>
              <div class="col-md-3 text-end">
                <span class="badge bg-secondary"><%= order.state %></span>
              </div>
            </div>
            <% if (order.products && order.products.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-sm table-bordered mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Товар</th>
                    <th>Код</th>
                    <th style="width: 100px">Кол-во</th>
                    <th style="width: 120px">Цена</th>
                    <th style="width: 120px">Сумма</th>
                  </tr>
                </thead>
                <tbody>
                  <% order.products.forEach(function(product) { %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.code || product.article || '-' %></td>
                    <td><%= product.quantity %></td>
                    <td><%= formatCurrency(product.price) %></td>
                    <td><strong><%= formatCurrency(product.sum) %></strong></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% } %>
          </div>
          <% }); %> <% } else { %>
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Заказы не найдены
          </div>
          <% } %>
        </div>
      </div>

      <!-- Back Button -->
      <div class="text-center mb-4">
        <a href="/admin/users" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Назад к списку пользователей
        </a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
