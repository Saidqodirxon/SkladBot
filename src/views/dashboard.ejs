    <script>
        let currentFilter = '<%= filter %>';
        let isLoading = false;
        const CACHE_DURATION = <%= cacheTTLMs %>; // Cache TTL from settings in milliseconds
        const CACHE_KEY = 'dashboard_data';
        let allCounterpartiesData = []; // Store all counterparties for local filtering
        let currentCachedAt = null; // Store when data was cached
        let cacheUpdateInterval = null; // Interval for updating cache age display

        function showLoading() {
            document.getElementById('loadingOverlay').classList.add('active');
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }

        function updateProgress(percent, message) {
            const progressBar = document.getElementById('progressBar');
            const progressMessage = document.getElementById('progressMessage');
            
            progressBar.style.width = percent + '%';
            progressBar.textContent = percent + '%';
            progressMessage.textContent = message;
        }

        // LocalStorage cache functions
        function saveCacheToLocalStorage(data, filter) {
            try {
                const cacheData = {
                    data: data,
                    allCounterparties: data.counterparties, // Save all counterparties
                    filter: filter,
                    expiresAt: Date.now() + CACHE_DURATION,
                    cachedAt: Date.now()
                };
                localStorage.setItem(CACHE_KEY, JSON.stringify(cacheData));
                console.log('‚úÖ Data saved to localStorage, expires at:', new Date(cacheData.expiresAt));
            } catch (error) {
                console.error('Error saving to localStorage:', error);
            }
        }

        function getCacheFromLocalStorage() {
            try {
                const cached = localStorage.getItem(CACHE_KEY);
                if (!cached) {
                    console.log('No cache found in localStorage');
                    return null;
                }

                const cacheData = JSON.parse(cached);
                
                // Check if cache is expired
                if (Date.now() > cacheData.expiresAt) {
                    console.log('Cache expired, removing...');
                    localStorage.removeItem(CACHE_KEY);
                    return null;
                }

                const cacheAgeMinutes = Math.floor((Date.now() - cacheData.cachedAt) / 1000 / 60);
                console.log(`‚úÖ Using cached data (age: ${cacheAgeMinutes} minutes)`);
                return cacheData;
            } catch (error) {
                console.error('Error reading from localStorage:', error);
                localStorage.removeItem(CACHE_KEY);
                return null;
            }
        }

        function clearLocalStorageCache() {
            try {
                localStorage.removeItem(CACHE_KEY);
                allCounterpartiesData = [];
                currentCachedAt = null;
                if (cacheUpdateInterval) {
                    clearInterval(cacheUpdateInterval);
                    cacheUpdateInterval = null;
                }
                console.log('‚úÖ LocalStorage cache cleared');
            } catch (error) {
                console.error('Error clearing localStorage:', error);
            }
        }

        function formatTimeAgo(timestamp) {
            const seconds = Math.floor((Date.now() - timestamp) / 1000);
            
            if (seconds < 60) return `${seconds} —Å–µ–∫—É–Ω–¥ –Ω–∞–∑–∞–¥`;
            
            const minutes = Math.floor(seconds / 60);
            if (minutes < 60) return `${minutes} –º–∏–Ω—É—Ç –Ω–∞–∑–∞–¥`;
            
            const hours = Math.floor(minutes / 60);
            if (hours < 24) return `${hours} —á–∞—Å–æ–≤ –Ω–∞–∑–∞–¥`;
            
            const days = Math.floor(hours / 24);
            return `${days} –¥–Ω–µ–π –Ω–∞–∑–∞–¥`;
        }

        function formatTimeUntil(timestamp) {
            const seconds = Math.floor((timestamp - Date.now()) / 1000);
            
            if (seconds < 0) return '0 —Å–µ–∫—É–Ω–¥';
            if (seconds < 60) return `${seconds} —Å–µ–∫—É–Ω–¥`;
            
            const minutes = Math.floor(seconds / 60);
            if (minutes < 60) return `${minutes} –º–∏–Ω—É—Ç`;
            
            const hours = Math.floor(minutes / 60);
            if (hours < 24) return `${hours} —á–∞—Å–æ–≤`;
            
            const days = Math.floor(hours / 24);
            return `${days} –¥–Ω–µ–π`;
        }

        function updateCacheAgeDisplay() {
            if (!currentCachedAt) return;
            
            const cacheAge = formatTimeAgo(currentCachedAt);
            const expiresAt = currentCachedAt + CACHE_DURATION;
            const timeUntil = formatTimeUntil(expiresAt);
            
            document.getElementById('cacheAge').textContent = cacheAge;
            document.getElementById('nextUpdate').textContent = timeUntil;
            
            // Auto-refresh when cache expires
            if (expiresAt <= Date.now()) {
                clearInterval(cacheUpdateInterval);
                localStorage.removeItem('dashboardCache');
                loadDashboardData(true); // Force refresh from server
            }
        }

        function startCacheAgeUpdater() {
            if (cacheUpdateInterval) {
                clearInterval(cacheUpdateInterval);
            }
            updateCacheAgeDisplay();
            cacheUpdateInterval = setInterval(updateCacheAgeDisplay, 1000); // Update every second
        }

        function filterCounterpartiesLocally(counterparties, filter) {
            if (filter === 'all') {
                return counterparties;
            } else if (filter === 'debtors') {
                return counterparties.filter(cp => cp.balance < 0);
            } else if (filter === 'registered') {
                return counterparties.filter(cp => cp.isRegistered);
            }
            return counterparties;
        }

        function formatCurrency(value) {
            return new Intl.NumberFormat('ru-RU', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            }).format(value) + ' —Å—É–º';
        }

        function renderCounterparties(counterparties) {
            const tableContainer = document.getElementById('tableContainer');
            
            if (counterparties.length === 0) {
                tableContainer.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì≠</div>
                        <h3>–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö</h3>
                        <p>–ö–æ–Ω—Ç—Ä–∞–≥–µ–Ω—Ç—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã</p>
                        <button class="btn btn-primary" onclick="loadDashboardData(true)" style="margin-top: 20px;">
                            üîÑ –ü–æ–ø—Ä–æ–±–æ–≤–∞—Ç—å —Å–Ω–æ–≤–∞
                        </button>
                    </div>
                `;
                return;
            }

            let tableHTML = `
                <table>
                    <thead>
                        <tr>
                            <th>–ö–æ–Ω—Ç—Ä–∞–≥–µ–Ω—Ç</th>
                            <th>–¢–µ–ª–µ—Ñ–æ–Ω</th>
                            <th>–ë–∞–ª–∞–Ω—Å</th>
                            <th>–°—Ç–∞—Ç—É—Å</th>
                            <th>–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            counterparties.forEach(cp => {
                let balanceHTML = '';
                let statusHTML = '';
                
                if (cp.balance < 0) {
                    balanceHTML = `<span style="color: #dc3545; font-weight: 600;">${formatCurrency(Math.abs(cp.balance))}</span>`;
                    statusHTML = `<span class="badge badge-danger">–î–æ–ª–∂–Ω–∏–∫</span>`;
                } else if (cp.balance > 0) {
                    balanceHTML = `<span style="color: #28a745; font-weight: 600;">+${formatCurrency(cp.balance)}</span>`;
                    statusHTML = `<span class="badge badge-success">–ü—Ä–æ—Ñ–∏—Ç</span>`;
                } else {
                    balanceHTML = `<span style="color: #6c757d;">0 —Å—É–º</span>`;
                    statusHTML = `<span class="badge badge-warning">OK</span>`;
                }

                const registrationHTML = cp.isRegistered
                    ? `<span class="badge badge-success">‚úì ${cp.userInfo.name}</span>`
                    : `<span class="badge" style="background: #e9ecef; color: #6c757d;">–ù–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω</span>`;

                tableHTML += `
                    <tr>
                        <td><strong>${cp.name}</strong></td>
                        <td>${cp.phone || '–ù–µ—Ç —Ç–µ–ª–µ—Ñ–æ–Ω–∞'}</td>
                        <td>${balanceHTML}</td>
                        <td>${statusHTML}</td>
                        <td>${registrationHTML}</td>
                    </tr>
