        // Helper function to process response data
        function processResponseData(data) {
            // Store all counterparties and cache time
            allCounterpartiesData = data.counterparties;
            currentCachedAt = Date.now();
            
            // Update statistics
            document.getElementById('stat-total').textContent = data.stats.total_counterparties;
            document.getElementById('stat-debtors').textContent = data.stats.total_debtors;
            document.getElementById('stat-debt').textContent = formatCurrency(data.stats.total_debt);
            document.getElementById('stat-profit').textContent = formatCurrency(data.stats.total_profit);
            document.getElementById('stat-registered').textContent = data.stats.registered_users;
            document.getElementById('stat-active').textContent = data.stats.active_users;

            // Filter locally and render
            const filteredCounterparties = filterCounterpartiesLocally(allCounterpartiesData, currentFilter);
            renderCounterparties(filteredCounterparties);
            
            // Save to localStorage with all counterparties
            saveCacheToLocalStorage(data, 'all');
            
            // Start cache age updater
            startCacheAgeUpdater();
        }

        async function loadDashboardData(forceRefresh = false) {
            if (isLoading) return;
            
            // Check localStorage cache first (if not forcing refresh)
            if (!forceRefresh) {
                const cacheData = getCacheFromLocalStorage();
                if (cacheData) {
                    updateProgress(0, '–ó–∞–≥—Ä—É–∑–∫–∞ –∏–∑ –∫–µ—à–∞...');
                    updateProgress(50, '–û–±—Ä–∞–±–æ—Ç–∫–∞ –¥–∞–Ω–Ω—ã—Ö...');
                    
                    // Store all counterparties and cache time
                    allCounterpartiesData = cacheData.allCounterparties || cacheData.data.counterparties;
                    currentCachedAt = cacheData.cachedAt;
                    
                    // Update statistics
                    document.getElementById('stat-total').textContent = cacheData.data.stats.total_counterparties;
                    document.getElementById('stat-debtors').textContent = cacheData.data.stats.total_debtors;
                    document.getElementById('stat-debt').textContent = formatCurrency(cacheData.data.stats.total_debt);
                    document.getElementById('stat-profit').textContent = formatCurrency(cacheData.data.stats.total_profit);
                    document.getElementById('stat-registered').textContent = cacheData.data.stats.registered_users;
                    document.getElementById('stat-active').textContent = cacheData.data.stats.active_users;

                    // Filter locally and render
                    const filteredCounterparties = filterCounterpartiesLocally(allCounterpartiesData, currentFilter);
                    renderCounterparties(filteredCounterparties);
                    
                    // Start cache age updater
                    startCacheAgeUpdater();
                    
                    updateProgress(100, '–ì–æ—Ç–æ–≤–æ!');
                    setTimeout(hideLoading, 300);
                    return;
                }
            }
            
            isLoading = true;
            showLoading();
            updateProgress(0, '–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ...');

            // Disable all buttons
            document.querySelectorAll('button, select').forEach(el => el.disabled = true);

            try {
                const response = await fetch(`/admin/api/dashboard-data?filter=all`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const contentType = response.headers.get('content-type');
                
                // Check if response is SSE or JSON
                if (contentType && contentType.includes('text/event-stream')) {
                    // Handle SSE response
                    const reader = response.body.getReader();
                    const decoder = new TextDecoder();
                    let dashboardData = null;
                    let dataLoaded = false;

                    while (true) {
                        const {value, done} = await reader.read();
                        if (done) break;

                        const chunk = decoder.decode(value);
                        const lines = chunk.split('\n').filter(line => line.trim());

                        for (const line of lines) {
                            if (line.startsWith('data: ')) {
                                try {
                                    const data = JSON.parse(line.substring(6));
                                    
                                    if (data.error) {
                                        throw new Error(data.message);
                                    }
                                    
                                    if (data.progress !== undefined) {
                                        updateProgress(data.progress, data.message || '');
                                    }
                                    
                                    if (data.done && data.data) {
                                        dashboardData = data.data;
                                        dataLoaded = true;
                                        
                                        // Process data
                                        processResponseData(data.data);
                                    }
                                } catch (parseError) {
                                    console.warn('Failed to parse SSE chunk:', parseError);
                                }
                            }
                        }
                    }

                    if (!dataLoaded) {
                        throw new Error('–î–∞–Ω–Ω—ã–µ –Ω–µ –±—ã–ª–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã');
                    }
                } else {
                    // Handle regular JSON response
                    updateProgress(50, '–û–±—Ä–∞–±–æ—Ç–∫–∞ –¥–∞–Ω–Ω—ã—Ö...');
                    const result = await response.json();
                    
                    if (result.error) {
                        throw new Error(result.message);
                    }
                    
                    if (result.data) {
                        updateProgress(100, '–ì–æ—Ç–æ–≤–æ!');
                        processResponseData(result.data);
                    } else {
                        throw new Error('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞');
                    }
                }

                setTimeout(hideLoading, 500);
            } catch (error) {
                console.error('Error loading dashboard:', error);
                // Only show alert if data wasn't loaded successfully
                if (allCounterpartiesData.length === 0) {
                    alert('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏: ' + error.message);
                }
                hideLoading();
            } finally {
                isLoading = false;
                // Re-enable all buttons
                document.querySelectorAll('button, select').forEach(el => el.disabled = false);
            }
        }

        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadDashboardData();
        });

        function applyFilter() {
            const filterSelect = document.getElementById('filter');
            currentFilter = filterSelect.value;
            
            // If we have cached data, filter locally without reloading
            if (allCounterpartiesData.length > 0) {
                console.log(`üîç Filtering locally: ${currentFilter}`);
                const filteredCounterparties = filterCounterpartiesLocally(allCounterpartiesData, currentFilter);
                renderCounterparties(filteredCounterparties);
            } else {
                // No cached data, load from server
                loadDashboardData(false);
            }
        }

