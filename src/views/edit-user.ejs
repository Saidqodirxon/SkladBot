        async function showReconciliation(counterpartyId, counterpartyName, customFromDate = null, customToDate = null) {
            const modal = document.getElementById('documentsModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalContent = document.getElementById('modalContent');

            modalTitle.textContent = `–ê–∫—Ç —Å–≤–µ—Ä–∫–∏: ${counterpartyName}`;
            modal.style.display = 'block';

            // Date range selector
            const toDate = customToDate || new Date().toISOString().split('T')[0];
            const fromDate = customFromDate || new Date(Date.now() - 30*24*60*60*1000).toISOString().split('T')[0];
            
            modalContent.innerHTML = `
              <div style="padding: 20px; border-bottom: 2px solid #dee2e6; margin-bottom: 20px;">
                <div style="display: flex; gap: 15px; align-items: center; justify-content: center; flex-wrap: wrap;">
                  <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: bold;">–î–∞–Ω / –°:</label>
                    <input type="date" id="fromDateInput" value="${fromDate}" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
                  </div>
                  <div>
                    <label style="display: block; margin-bottom: 5px; font-weight: bold;">–ì–∞—á–∞ / –ü–æ:</label>
                    <input type="date" id="toDateInput" value="${toDate}" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
                  </div>
                  <div style="align-self: flex-end;">
                    <button onclick="generateReconciliation('${counterpartyId}', '${counterpartyName}')" style="padding: 8px 20px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; font-weight: bold;">üìä –®–∞–∫–ª–ª–ª–∞–Ω—Ç–∏—Ä–∏—à / –°—Ñ–æ—Ä–º–∏—Ä–æ–≤–∞—Ç—å</button>
                  </div>
                </div>
              </div>
              <div id="reconciliationContent">
                <div style="text-align: center; padding: 40px;">
                  <div class="spinner" style="border: 4px solid #f3f3f3; border-top: 4px solid #3498db; border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto;"></div>
                  <p style="margin-top: 20px; color: #666;">Yuklanmoqda / –ó–∞–≥—Ä—É–∑–∫–∞...</p>
                </div>
              </div>
            `;

            try {
              
              const response = await fetch('/admin/counterparty/' + counterpartyId + '/reconciliation?from=' + fromDate + '&to=' + toDate);
              const data = await response.json();
              
              const contentDiv = document.getElementById('reconciliationContent');

              if (data.success && data.report) {
                const report = data.report;
                const fromFormatted = new Date(report.period.from).toLocaleDateString('ru-RU');
                const toFormatted = new Date(report.period.to).toLocaleDateString('ru-RU');
                
                let html = '<div style="padding: 20px; font-family: Arial;">';
                
                // Header
                html += '<h2 style="text-align: center; margin-bottom: 5px;">–ê–ö–¢ –°–í–ï–†–ö–ò –í–ó–ê–ò–ú–û–†–ê–°–ß–ï–¢–û–í</h2>';
                html += '<h3 style="text-align: center; margin-bottom: 20px; font-weight: normal;">–° ' + counterpartyName + '</h3>';
                html += '<p style="text-align: center; margin-bottom: 30px; color: #666;">–ü–µ—Ä–∏–æ–¥: ' + fromFormatted + ' - ' + toFormatted + '</p>';
                
                // Table
                html += '<table style="width: 100%; border-collapse: collapse; font-size: 13px;">';
                html += '<thead><tr style="background: #f8f9fa;">';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px; text-align: left;">–û–ø–µ—Ä–∞—Ü–∏—è/–î–æ–∫—É–º–µ–Ω—Ç</th>';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">–î–∞—Ç–∞</th>';
                html += '<th colspan="2" style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">–°–£–ú</th>';
                html += '</tr>';
                html += '<tr style="background: #f8f9fa;">';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px;"></th>';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px;"></th>';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">–î–µ–±–µ—Ç</th>';
                html += '<th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">–ö—Ä–µ–¥–∏—Ç</th>';
                html += '</tr></thead><tbody>';
                
                // Opening balance
                html += '<tr style="background: #fff3cd;"><td colspan="2" style="border: 1px solid #dee2e6; padding: 8px; font-weight: bold;">–°–∞–ª—å–¥–æ –Ω–∞ –Ω–∞—á–∞–ª–æ –ø–µ—Ä–∏–æ–¥–∞</td>';
                html += '<td style="border: 1px solid #dee2e6; padding: 8px; text-align: right;">' + formatMoney(Math.abs(report.openingBalance)) + '</td>';
                html += '<td style="border: 1px solid #dee2e6; padding: 8px;"></td></tr>';
                
                // Transactions
                report.transactions.forEach(t => {
                  const date = new Date(t.date).toLocaleDateString('ru-RU');
                  html += '<tr>';
