    <script>
      function filterUsers() {
        const filter = document.getElementById("filter").value;
        const rows = document.querySelectorAll(".user-row");
        let visible = 0;

        rows.forEach((row) => {
          let show = true;
          if (filter === "debtors") {
            show = row.dataset.debtor === "true";
          } else if (filter === "active") {
            show = row.dataset.active === "true";
          } else if (filter === "inactive") {
            show = row.dataset.active === "false";
          } else if (filter === "blocked") {
            show = row.dataset.blocked === "true";
          }
          row.style.display = show ? "" : "none";
          if (show) visible++;
        });

        console.log(`Showing ${visible} users with filter: ${filter}`);
      }

      async function sendReminder(userId, button) {
        button.disabled = true;
        button.textContent = "‚è≥ –û—Ç–ø—Ä–∞–≤–∫–∞...";

        try {
          const response = await fetch(`/admin/users/${userId}/send`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          const data = await response.json();

          if (data.success) {
            button.textContent = "‚úÖ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ";
            setTimeout(() => {
              button.textContent = "üì§ –û—Ç–ø—Ä–∞–≤–∏—Ç—å";
              button.disabled = false;
            }, 2000);
            alert(data.message);
            location.reload();
          } else {
            button.textContent = "‚ùå –û—à–∏–±–∫–∞";
            setTimeout(() => {
              button.textContent = "üì§ –û—Ç–ø—Ä–∞–≤–∏—Ç—å";
              button.disabled = false;
            }, 2000);
            alert("–û—à–∏–±–∫–∞: " + data.message);
          }
        } catch (error) {
          button.textContent = "‚ùå –û—à–∏–±–∫–∞";
          console.error("Error:", error);
          alert("–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞");
          setTimeout(() => {
            button.textContent = "üì§ –û—Ç–ø—Ä–∞–≤–∏—Ç—å";
            button.disabled = false;
          }, 2000);
        }
      }

      async function showReconciliation(
        counterpartyId,
